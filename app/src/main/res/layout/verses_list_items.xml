<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/versesItemClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/change_background"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/listBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/baseline_edit_note_24" />


            <TextView
                android:id="@+id/verseNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="0.9"
                android:fontFamily="@font/baloo_bhai_2"
                android:gravity="center_vertical"
                android:text="Verse 1"
                android:textColor="@color/appColor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageButton

                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@drawable/circle"

                android:padding="5dp"
                app:tint="@color/white"
                android:src="@drawable/baseline_keyboard_double_arrow_right_24" />


        </LinearLayout>

        <TextView
            android:id="@+id/verseDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="@dimen/_5ssp"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:text="@string/verses"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
            app:layout_constraintStart_toStartOf="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>